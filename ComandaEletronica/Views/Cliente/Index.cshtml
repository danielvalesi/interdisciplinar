
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col m6">
            <h2>Clientes</h2>
        </div>
        <div class="col m6">
            <br>
            <br>
            <a href="/cliente/create" class="btn right light-blue darken-3">Cadastrar cliente</a>
        </div>
    </div>
    <div class="row">
        <form action="/cliente/filter" method="post" class="col m12">
            <nav>
                <div class="nav-wrapper">

                    <div class="input-field">
                        <input id="search" name="nome" type="search" placeholder="Pesquisar pelo nome..." required>
                        <label for="search"><i class="material-icons">search</i></label>
                        <i class="material-icons">close</i>
                    </div>

                </div>
            </nav>
        </form>
    </div>






    <div class="table-responsive">
        <table class="table striped bordered highlight">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Preço</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
            {
                    <tr>
                        <td>@cliente.Pessoa_id</td>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Email</td>
                        <td>@cliente.Cpf</td>
                        <td>
                            <div class="btn-group">
                                <a href="/cliente/update/@cliente.Pessoa_id" class="btn btn-xs btn-default">
                                    <span class="glyphicon glyphicon-edit"></span> Editar
                                </a>
                                <a href="/cliente/delete/@cliente.Pessoa_id" class="btn btn-xs btn-danger red darken-3">
                                    <span class="glyphicon glyphicon-trash"></span> Apagar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
