@model ComandaEletronica.Entity.Cliente
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Template.cshtml";
}


<div class="container">
    <h2>Editar Cliente</h2>
    <form action="/cliente/update" method="post">

        <input type="hidden" name="idCliente" value="@Model.Pessoa_id" />

        <div class="input-field col s6">
            <input id="nome" type="text" name="nome" class="validate" value="@Model.Nome">
            <label for="nome">Nome</label>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <textarea id="descricao" class="materialize-textarea" name="descricao">@Model.Email</textarea>
                <label for="descricao">Descrição</label>
            </div>
        </div>


        <div class="input-field col s6">
            <input id="preco" type="text" name="preco" class="validate" value="@Model.Senha">
            <label for="preco">Preço</label>
        </div>
        <!-- Fazer depois -->
        <div class="input-field col s6">
            <select name="categoria">
                <option value="" disabled selected>Selecione uma opção</option>
                <option value="1">Cliente Pronto</option>
                <option value="2">Cliente à Produzir</option>
            </select>
            <label>Categoria</label>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">
            ATUALIZAR
            <i class="material-icons right">send</i>
        </button>
    </form>

</div>
















@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">ATUALIZAR CLIENTE</h3>

        </div>
        <div class="panel-body">
            <input type="hidden" name="idCliente" value="@Model.Pessoa_id" />
            <form action="/cliente/update" method="post" enctype="multipart/form-data" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="nome">Nome</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nome" name="nome" value="@Model.Nome" >
                    </div>
                </div>
                <div class="form-group-separator"></div>
                
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="email">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="email" name="email" value="@Model.Email">
                    </div>
                </div>
                <div class="form-group-separator"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="senha">Senha</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="senha" name="senha" value="@Model.Nome">
                    </div>
                </div>
                <div class="form-group-separator"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="cpf">CPF</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="cpf" name="cpf" value="@Model.Cpf">
                    </div>
                </div>
                <div class="form-group-separator"></div>

                

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="porcentagemDesconto">% Desconto</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="porcentagemDesconto" name="porcentagemDesconto" value="@Model.PorcentagemDesconto">
                    </div>
                </div>
                <div class="form-group-separator"></div>

            


                <div class="form-group">
                    <button type="reset" class="btn btn-gray btn-single">CANCELAR</button>
                    <button type="submit" class="btn btn-info btn-single pull-right">ATUALIZAR</button>
                </div>

            </form>
        </div>
    </div>


</div>
