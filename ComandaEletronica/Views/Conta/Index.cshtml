
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div class="container">
    <!-- Basic Setup -->
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                CONTAS
                <a href="/conta/create" class="btn btn-success">CADASTRAR</a>
            </h3>

            <div class="panel-options">
                <a href="#" data-toggle="panel">
                    <span class="collapse-icon">&ndash;</span>
                    <span class="expand-icon">+</span>
                </a>
                <a href="#" data-toggle="remove">
                    &times;
                </a>
            </div>
        </div>
        <div class="panel-body">

            <script type="text/javascript">
            jQuery(document).ready(function($)
            {
                $("#example-1").dataTable({
                    aLengthMenu: [
                        [10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]
                    ]
                });
            });
            </script>

            <table id="example-1" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Localização ID</th>
                        <th>Cliente ID</th>
                        <th>Data Abertura</th>
                        <th>Data Fechamento</th>
                        <th>Valor</th>
                        <th>Status da Conta</th>
                        <th>Forma de Pagamento</th>
                        <th>Ações</th>
                    </tr>
                </thead>


                <tbody>
                    @foreach (var conta in Model)
                    {
                        <tr>
                            <td>@conta.Id</td>
                            <td>@conta.Localizacao_id</td>
                            <td>@conta.Cliente_id</td>
                            <td>@conta.DataAbertura</td>
                            <td>@conta.DataFechamento</td>
                            <td>@conta.Valor</td>
                            <td>@conta.Status</td>
                            <td>@conta.FormaPagamento</td>
                            <td>
                                <a href="/conta/update/@conta.Id" class="btn btn-xs btn-default">
                                    <span class="glyphicon glyphicon-edit"></span> Editar
                                </a>
                                <a href="/conta/delete/@conta.Id" class="btn btn-xs btn-danger">
                                    <span class="glyphicon glyphicon-trash"></span> Apagar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>









</div>
