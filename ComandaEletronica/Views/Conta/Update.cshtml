
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">ATUALIZAR CONTA</h3>
            <div class="panel-options">
                <a href="#" data-toggle="panel">
                    <span class="collapse-icon">–</span>
                    <span class="expand-icon">+</span>
                </a>
                <a href="#" data-toggle="remove">
                    ×
                </a>
            </div>
        </div>

        <div class="panel-body">
            <form action="/conta/update" method="post" enctype="multipart/form-data" class="form-horizontal">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="localizacao_id">Id da Localização</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="localizacao_id" name="localizacao_id">
                    </div>
                </div>
                <div class="form-group-separator"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="cliente_id">Id do Cliente</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="cliente_id" name="cliente_id" value="@Model.Cliente_id">
                    </div>
                </div>
                <div class="form-group-separator"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="dataAbertura">Data/Hora de Abertura</label>
                    <div class="col-sm-10">
                        <input type="datetime" class="form-control" id="dataAbertura" name="dataAbertura" value="@Model.DataAbertura">
                    </div>
                </div>
                <div class="form-group-separator"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="dataFechamento">Data/Hora de Fechamento</label>
                    <div class="col-sm-10">
                        <input type="datetime" class="form-control" id="dataFechamento" name="dataFechamento" value="@Model.DataFechamento">
                    </div>
                </div>
                <div class="form-group-separator"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="vamor">Valor</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="vamor" name="vamor" placeholder="R$ 00,00" value="@Model.Valor">
                        <p class="help-block">Frase de ajuda.</p>
                    </div>
                </div>
                <div class="form-group-separator"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Status da Conta</label>
                    <div class="col-sm-10">
                        <select name="statusConta" class="form-control">
                            <option value="" disabled selected>Selecione uma opção</option>
                            <option value="1">Fechada</option>
                            <option value="2">Aberta</option>
                        </select>
                    </div>
                </div>
                <div class="form-group-separator"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Forma Pagamento</label>
                    <div class="col-sm-10">
                        <select name="formaPagamento" class="form-control">
                            <option value="" disabled selected>Selecione uma opção</option>
                            <option value="1">Dinheiro</option>
                            <option value="2">Cartão</option>
                            <option value="3">Cheque</option>
                        </select>
                    </div>
                </div>
                <div class="form-group-separator"></div>
                <div class="form-group">
                    <button type="reset" class="btn btn-gray btn-single">CANCELAR</button>
                    <button type="submit" class="btn btn-info btn-single pull-right">CADASTRAR</button>
                </div>
            </form>
        </div>
    </div>
</div>

