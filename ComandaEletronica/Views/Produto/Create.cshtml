
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">CADASTRAR PRODUTO</h3>
            <div class="panel-options">
                <a href="#" data-toggle="panel">
                    <span class="collapse-icon">–</span>
                    <span class="expand-icon">+</span>
                </a>
                <a href="#" data-toggle="remove">
                    ×
                </a>
            </div>
        </div>
        <div class="panel-body">
            <form action="/produto/create" method="post" enctype="multipart/form-data" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="nome">Nome</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nome" name="nome">
                    </div>
                </div>
                <div class="form-group-separator"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="preco">Preço</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="preco" name="preco" placeholder="R$ 00,00">
                        <p class="help-block">Frase de ajuda.</p>
                    </div>
                </div>
                <div class="form-group-separator"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="descricao">Descrição</label>
                    <div class="col-sm-10">
                        <textarea class="form-control autogrow" cols="5" id="descricao" name="descricao" placeholder="Descreva como é o produto" style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 50px;"></textarea>
                    </div>
                </div>
                <div class="form-group-separator"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Categoria</label>
                    <div class="col-sm-10">
                        <select name="categoria" class="form-control">
                            <option value="" disabled selected>Selecione uma opção</option>
                            <option value="1">Produto Pronto</option>
                            <option value="2">Produto à Produzir</option>
                        </select>
                    </div>
                </div>
                <div class="form-group-separator"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="imagem">Foto do Produto</label>
                    <div class="col-sm-10">
                        <input type="file" class="form-control" id="imagem" name="imagem">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="tempoPreparo">Tempo de Preparo</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="tempoPreparo" name="tempoPreparo">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="estoque">Estoque</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="estoque" name="estoque">
                    </div>
                </div>

                <div class="form-group">
                    <button type="reset" class="btn btn-gray btn-single">CANCELAR</button>
                    <button type="submit" class="btn btn-info btn-single pull-right">CADASTRAR</button>
                </div>


            </form>
        </div>
    </div>

</div>
