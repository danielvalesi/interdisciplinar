
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div class="container">
    <!-- Basic Setup -->
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">

                PRODUTOS

                <a href="/produto/create" class="btn btn-success">CADASTRAR</a>

            </h3>

            <div class="panel-options">
                <a href="#" data-toggle="panel">
                    <span class="collapse-icon">&ndash;</span>
                    <span class="expand-icon">+</span>
                </a>
                <a href="#" data-toggle="remove">
                    &times;
                </a>
            </div>
        </div>
        <div class="panel-body">

            <script type="text/javascript">
                jQuery(document).ready(function ($) {
                    $("#example-1").dataTable({
                        aLengthMenu: [
                            [10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]
                        ]
                    });
                });
            </script>

            <table id="example-1" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th style="min-width: 25px;">ID</th>
                        <th style="min-width: 100px;">Nome</th>
                        <th style="min-width: 50px;">Preço</th>
                        <th style="min-width: 25px;">Descrição</th>
                        <th style="min-width: 80px;">Categoria</th>
                        <th style="min-width: 80px;">Imagem</th>
                        <th style="min-width: 100px;">Tempo de Preparo</th>
                        <th style="min-width: 80px;">Estoque</th>
                        <th style="min-width: 25px;">Ações</th>
                    </tr>
                </thead>

                <!--tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Preço</th>
                        <th>Descrição</th>
                        <th>Categoria</th>
                        <th>Imagem</th>
                        <th>Tempo de Preparo</th>
                        <th>Estoque</th>
                        <th>Ações</th>
                    </tr>
                </tfoot-->

                <tbody>
                    @foreach (var produto in Model)
                    {
                        <tr>
                            <td>@produto.Id</td>
                            <td>@produto.Nome</td>
                            <td>@produto.Preco</td>
                            <td>@produto.Descricao</td>
                            <td>@produto.Categoria</td>
                            <td><img src="@produto.Imagem" class="img-responsive" width="80"></td>
                            <td>@produto.TempoPreparo</td>
                            <td>@produto.Estoque</td>
                            <td>
                                <a href="/produto/update/@produto.Id" class="btn btn-xs btn-default">
                                    <span class="glyphicon glyphicon-edit"></span> Editar
                                </a>
                                <a href="/produto/delete/@produto.Id" class="btn btn-xs btn-danger">
                                    <span class="glyphicon glyphicon-trash"></span> Apagar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    
    
    
    
