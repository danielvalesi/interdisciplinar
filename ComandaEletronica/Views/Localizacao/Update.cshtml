
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">CADASTRAR PRODUTO</h3>
            <div class="panel-options">
                <a href="#" data-toggle="panel">
                    <span class="collapse-icon">–</span>
                    <span class="expand-icon">+</span>
                </a>
                <a href="#" data-toggle="remove">
                    ×
                </a>
            </div>
        </div>
        <div class="panel-body">
            <form action="/produto/update" method="post" enctype="multipart/form-data" class="form-horizontal">

                <input type="hidden" name="id" value="@Model.Numero" />

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="qtdLugares">Quantidade de Lugares</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="qtdLugares" name="qtdLugares" value="@Model.QtdLugares">
                    </div>
                </div>
                <div class="form-group-separator"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="descricao">Descrição</label>
                    <div class="col-sm-10">
                        <textarea class="form-control autogrow" cols="5" id="descricao" name="descricao" style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 50px;">@Model.Descricao</textarea>
                    </div>
                </div>
                <div class="form-group-separator"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Status</label>
                    <div class="col-sm-10">
                        <select name="status" class="form-control">
                            <option value="" disabled selected>Selecione uma opção</option>
                            <option value="1">Livre</option>
                            <option value="2">Ocupado</option>
                        </select>
                    </div>
                </div>
                <div class="form-group-separator"></div>

                <div class="form-group">
                    <button type="reset" class="btn btn-gray btn-single">CANCELAR</button>
                    <button type="submit" class="btn btn-info btn-single pull-right">CADASTRAR</button>
                </div>


            </form>
        </div>
    </div>
</div>

